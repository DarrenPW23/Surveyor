{{!-- html
  head
    title #{"Hey this is a register"}
    link(rel="stylesheet", href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css", integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z", crossorigin="anonymous")
    link(rel="icon" type="image/png" href="/favicon.png")
  body
    main
        div.container
            div.row
                div.col-12.col-md-8.col-lg-6
                    h1 Register
                    form.my-4(action="" method="post")
                        div.input-group.mb-4
                            label.mr-2(for="register-email") Email
                            input#register-email(type="email" name="email" placeholder="Email" value=formData ? formData.email : '')

                        div.input-group.mb-4
                            label.mr-2(for="register-username") Username
                            input#register-username(type="text" name="username" placeholder="Username" value=formData ? formData.username : '')

                        div.input-group.mb-4
                            label.mr-2(for="register-password") Password
                            input#register-password(type="password" name="password" placeholder="Password" value=formData ? formData.password : '')

                        div.input-group.mb-4
                            label.mr-2(for="register-repeat_password") Repeat Password
                            input#register-repeat_password(type="password" name="repeat_password" placeholder="Password")

                        div.input-group.mb-4
                            input(type="submit" value="Register")

                    //- #{errors.forEach}
                    ul
                        each error in errors
                            li
                                each x in error
                                    #{x}

    footer
    script(src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous")
    script(src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js", integrity="sha384-LtrjvnR4Twt/qOuYxE721u19sVFLVSA4hf/rRt6PrZTmiPltdZcI7q7PXQBYTKyf", crossorigin="anonymous") --}}
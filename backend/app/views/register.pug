doctype html
html
  head
    title #{"Hey this is a register"}
    link(rel="stylesheet", href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css", integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z", crossorigin="anonymous")
    link(rel="icon" type="image/png" href="/favicon.png")
  body
    main
        div(class="container")
            div(class="row")
                div(class="col-12 col-md-8 col-lg-6")
                    h1 Register
                    form(action="/my-account/register" method="post" class="my-4")
                        div(class="input-group mb-4")
                            label(for="register-username" class="mr-2") Username
                            input(type="text" name="username" placeholder="Username" id="register-username")

                        div(class="input-group mb-4")
                            label(for="register-password" class="mr-2") Password
                            input(type="password" name="password" placeholder="Password" id="register-password")

                        div(class="input-group mb-4")
                            label(for="register-email" class="mr-2") Email
                            input(type="email" name="email" placeholder="Email" id="register-email")

    footer
    script(src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous")
    script(src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js", integrity="sha384-LtrjvnR4Twt/qOuYxE721u19sVFLVSA4hf/rRt6PrZTmiPltdZcI7q7PXQBYTKyf", crossorigin="anonymous")